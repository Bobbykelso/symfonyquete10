{# templates/categories/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Catégorie
	{{ category.0.name }}
{% endblock %}

{% block body %}
	<h1>Toutes les séries de la Categorie
		{{ category.0.name }}
		:
	</h1>
	{% for program in programs %}
		<div>
			<div class="poster">
				<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
			</div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
			</h2>
			<h3>Catégorie :
				{{ program.category.name }}</h3>
			<h3>ID :
				{{ program.id }}
			</h3>
			<p>{{ program.summary }}</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<div class="backin">
		<a href="{{ path('app_index') }}">
			Retour à l'accueil
		</a>
	</div>
{% endblock %}

